{
  "name": "awesome-graphql-client",
  "version": "0.6.0",
  "description": "GraphQL Client with file upload support for NodeJS and browser",
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "repository": "https://github.com/lynxtaa/awesome-graphql-client.git",
  "homepage": "https://github.com/lynxtaa/awesome-graphql-client#readme",
  "license": "MIT",
  "keywords": [
    "graphql",
    "request",
    "graphql-client",
    "apollo"
  ],
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.m.js",
  "unpkg": "dist/index.umd.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist/*",
    "build": "microbundle build --tsconfig tsconfig.build.json",
    "validate": "npm run check-format && npm run check-types && npm run lint",
    "lint": "eslint --ext .js,.ts src/",
    "prettier": "prettier \"src/**/*\" \"*.{js,json}\"",
    "check-format": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "check-types": "tsc",
    "release": "standard-version",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "extract-files": "9.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "7.12.7",
    "@babel/plugin-transform-modules-commonjs": "7.12.1",
    "@babel/preset-typescript": "7.12.7",
    "@types/extract-files": "8.1.0",
    "@types/jest": "26.0.19",
    "@types/node-fetch": "2.5.7",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "babel-jest": "26.6.3",
    "eslint": "7.16.0",
    "eslint-plugin-import": "2.22.1",
    "form-data": "3.0.0",
    "graphql": "15.4.0",
    "graphql-tag": "2.11.0",
    "husky": "4.3.6",
    "is-ci-cli": "2.1.2",
    "jest": "26.6.3",
    "microbundle": "0.13.0",
    "msw": "0.24.4",
    "node-fetch": "2.6.1",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "standard-version": "9.1.0",
    "typescript": "4.1.3",
    "whatwg-fetch": "3.5.0"
  }
}
