{
	"resetMocks": true,
	"roots": ["<rootDir>/test", "<rootDir>/src"],
	"setupFilesAfterEnv": ["<rootDir>/test/jest/setupTests.ts"],
	"transform": {
		"\\.[jt]sx?$": [
			"babel-jest",
			{
				"babelrc": false,
				"presets": ["@babel/preset-typescript"],
				"plugins": [
					"@babel/plugin-transform-modules-commonjs",
					"@babel/plugin-proposal-optional-chaining"
				]
			}
		]
	}
}
